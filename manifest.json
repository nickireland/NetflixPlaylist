{
    "manifest_version": 2,
    "name": "Netflix Playlist",
    "version": "1.1",
    "permissions": [
        "*://netflix.com/*",
        "storage",
        "contextMenus",
        "webNavigation",
        "<all_urls>" 
    ],
    "description": "A chrome extension which allows users to create a playlist of netflix episodes",
    "icons": {
        "16": "icons/16NP.png",
        "48": "icons/48NP.png",
        "128": "icons/128NP.png"
    },
    "page_action": {
        "default_icon": {
            "16": "icons/16NP.png",
            "48": "icons/48NP.png",
            "128": "icons/128NP.png"
        },
        "default_title": "Netflix Playlist",
        "default_popup": "popup.html"
    },
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    }
}